
@tailwind base;
@tailwind components;
@tailwind utilities;

@font-face {
    font-family: 'neue_pixel_sansregular';
    font-weight: normal;
    font-style: normal;

}
body  {
    background-color: #000C4C;
}
.image {
  height: 400px;
}

.title {
  color: white;
  font-size: 2.5em;
  font-weight: bold;
}

a
h1, h2, h3, h4, p {
    font-family: 'neue_pixel_sansregular', sans-serif;
}

.markdown-body {
   background: rgba(255, 255, 255,.1);
   height: 100%;
   font-family: 'neue_pixel_sansregular', sans-serif;
   src: local('neue_pixel_sansregular'), url(/AzureMayaMystery/fonts/neue-pixel-sans-regular.ttf) format('ttf');
   
}

.markdown-body input {
  text-color: red;
}

a.header-anchor {
    display:none;
}

.markdown-body button {
  background-color: transparent;
  cursor: pointer;
  color: #0060f2;
  border: 1px solid #0060f2;
}

.markdown-body button:hover {
  background-color: transparent;
  cursor: pointer;
  color: white;
  background: #0060f2
  border: 1px solid #0060f2;
}

.markdown-body a {
  background-color: transparent;
  text-decoration: underline;
  cursor: pointer;
  color: #0060f2;
  font-weight: bold;
}

.markdown-body a:active,
.markdown-body a:hover {
  outline-width: 0;
}

.markdown-body strong {
  font-weight: inherit;
  font-weight: bolder;
}

.markdown-body h1 {
  font-size: 2.5em;
  font-weight: bold;
  text-decoration: none;
}

.markdown-body h2 {
  font-size: 2em;
  font-weight: bold
}

.markdown-body Label {
  font-size: 28px;
}

.markdown-body p {
  padding-top: 20px;
  font-size: 28px;
}

//clippy
.clippy, .clippy-balloon {
    position: fixed;
    z-index: 1000;
    cursor: pointer;
}

.clippy-balloon {

    background: #FFC;
    color: black;
    padding: 8px;
    border: 1px solid black;
    border-radius: 5px;

}

.clippy-content {
    max-width: 200px;
    min-width: 120px;
    font-family: "Microsoft Sans", sans-serif;
    font-size: 10pt;
}

.clippy-tip {
    width: 10px;
    height: 16px;
    background: url('data:image/png;base64,') no-repeat;
    position: absolute;
}

.clippy-top-left .clippy-tip {
    top: 100%;
    margin-top: 0px;
    left: 100%;
    margin-left: -50px;
}

.clippy-top-right .clippy-tip {
    top: 100%;
    margin-top: 0px;
    left: 0;
    margin-left: 50px;
    background-position: -10px 0;

}

.clippy-bottom-right .clippy-tip {
    top: 0;
    margin-top: -16px;
    left: 0;
    margin-left: 50px;
    background-position: -10px -16px;
}

.clippy-bottom-left .clippy-tip {
    top: 0;
    margin-top: -16px;
    left: 100%;
    margin-left: -50px;
    background-position: 0px -16px;
}
