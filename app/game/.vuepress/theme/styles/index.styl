  font-weight: bold;
}

a
h1, h2, h3, h4, p {
    font-family: sans-serif;
}

.markdown-body {
   background: rgba(255, 255, 255,.1);
   height: 100%;
   
}



.markdown-body input {
  text-color: red;
}

a.header-anchor {
    display:none;
}

.markdown-body button {
  background-color: transparent;
  cursor: pointer;
  color: #0060f2;
  border: 1px solid #0060f2;
}

.markdown-body button:hover {
  background-color: transparent;
  cursor: pointer;
  color: white;
  background: #0060f2
  border: 1px solid #0060f2;
}

.markdown-body a {
  background-color: transparent;
  text-decoration: underline;
  cursor: pointer;
  color: #0060f2;
  font-weight: bold;
}

.markdown-body a:active,
.markdown-body a:hover {
  outline-width: 0;
}

.markdown-body strong {
  font-weight: inherit;
  font-weight: bolder;
}

.markdown-body h1 {
  font-size: 2.5em;
  font-weight: bold;
  text-decoration: none;
}

.markdown-body h2 {
  font-size: 2em;
  font-weight: bold
}

.markdown-body Label {
  font-size: 28px;
}

.markdown-body p {
  padding-top: 20px;
  font-size: 28px;
}

